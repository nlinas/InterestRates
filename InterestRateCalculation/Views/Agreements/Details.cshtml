@model InterestRateCalculation.Models.Agreement

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Agreement</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt> @Html.DisplayNameFor(model => model.Customer.Name) </dt>
        <dd> @Html.DisplayFor(model => model.Customer.Name) @Html.DisplayFor(model => model.Customer.PersonalId) </dd>

        <dt> @Html.DisplayNameFor(model => model.Amount) </dt>
        <dd> @Html.DisplayFor(model => model.Amount) </dd>

        <dt> @Html.DisplayNameFor(model => model.Margin) </dt>
        <dd> @Html.DisplayFor(model => model.Margin) </dd>

        <dt> @Html.DisplayNameFor(model => model.BaseRate.BaseRateCode) </dt>
        <dd> @Html.DisplayFor(model => model.BaseRate.BaseRateCode) </dd>

        <dt> @Html.DisplayNameFor(model => model.Duration) </dt>
        <dd> @Html.DisplayFor(model => model.Duration) </dd>

        @*<dt> @Html.DisplayNameFor(model => model.BaseRate) </dt>
        <dd> @Html.DisplayFor(model => model.BaseRate) </dd>*@

        <dt> @Html.DisplayNameFor(model => model.InterestRate) </dt>
        <dd> @Html.DisplayFor(model => model.InterestRate) </dd>

        @if (Model.NewBaseRateId > 0)
        {
            <dt>@Html.LabelFor(model => model.NewInterestRate) </dt>
            <dd>@Html.DisplayFor(model => model.NewInterestRate)</dd>

            <dt>@Html.LabelFor(model => model.InterestRatesDiff)</dt>
            <dd>@Html.DisplayFor(model => model.InterestRatesDiff)</dd>
        }
    </dl>
</div>
<div class="form-horizontal">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Id);

        <div class="form-group">
            @Html.LabelFor(model => model.NewBaseRateId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NewBaseRateId", null, "-", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewBaseRateId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Compare" class="btn btn-default" />
            </div>
        </div>
    }
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
